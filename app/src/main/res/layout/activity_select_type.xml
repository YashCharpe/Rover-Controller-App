<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectType">

    <ImageView
        android:id="@+id/controllerImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_controller_select"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.221"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/controllerImg"
        app:layout_constraintStart_toStartOf="@id/controllerImg"
        app:layout_constraintEnd_toEndOf="@id/controllerImg"
        android:layout_marginTop="10dp"
        android:text="Rover Controller"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/voiceSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_voice_select"
        app:layout_constraintStart_toEndOf="@id/controllerImg"
        app:layout_constraintTop_toTopOf="@id/controllerImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/controllerImg"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/voiceSelect"
        app:layout_constraintStart_toStartOf="@id/voiceSelect"
        app:layout_constraintEnd_toEndOf="@id/voiceSelect"
        android:layout_marginTop="10dp"
        android:text="Voice Controller"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:textStyle="bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>